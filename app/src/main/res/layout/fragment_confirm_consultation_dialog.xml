<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:src="@drawable/appt_confirmation"
        android:layout_marginStart="60dp"
        android:id="@+id/doctor"/>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_3"
        android:layout_marginEnd="@dimen/margin_medium_3"
        android:layout_below="@id/doctor"
        android:layout_marginTop="@dimen/margin_medium_2"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#424656"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="3sp"
            android:text="ဆွေးနွေးမှု တည်ပြုချက်"
            android:id="@+id/textOne"
            android:padding="@dimen/margin_small"
            android:layout_marginStart="40dp"
            />
        <org.mmtextview.components.MMTextView
            android:id="@+id/specialityNameInDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:textStyle="normal"
            android:padding="@dimen/margin_small"
            android:textSize="16sp"
            android:textColor="#004247"
            android:layout_below="@id/textOne"
            android:letterSpacing="-0.02"
            android:layout_marginStart="22dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="3sp"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:gravity="center"
        android:layout_marginStart="40dp">
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_dialog_cancel"
            android:id="@+id/btnCancelDialog"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSureDialog"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/btnCancelDialog"
            android:layout_height="wrap_content"
            android:text="@string/btn_dialog_sure"/>
    </RelativeLayout>
</RelativeLayout>