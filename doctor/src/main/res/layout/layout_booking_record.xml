<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="146dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        android:layout_marginStart="15dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivpatientBookingListPhoto"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/no_path"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />
        <LinearLayout
            android:id="@+id/llLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/ivpatientBookingListPhoto"
            android:layout_marginTop="28dp"
            android:layout_marginStart="22dp">
            <org.mmtextview.components.MMTextView
                android:id="@+id/tvPatientNameInBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="17sp"
                android:textColor="#424656"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="9sp"
                android:text="Aung Aung"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar_solid"/>
                <org.mmtextview.components.MMTextView
                    android:id="@+id/calenderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#949494"
                    android:layout_marginStart="4dp"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="7sp"
                    android:text="14 Nov 2020"
                    />
            </LinearLayout>
        </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
                android:background="@drawable/rounded_corner_button"
                android:text="စာပို့မည်"
                android:id="@+id/btnsendMessage"
                android:padding="@dimen/margin_medium_2"
                android:layout_toRightOf="@id/llLayout"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_below="@id/btnsendMessage"
                android:weightSum="3">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="3sp"
                    android:text="ဆေးမှတ်တမ်း"
                    android:layout_weight="1"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="3sp"
                    android:text="ဆေးညွှန်း"
                    android:layout_weight="1"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="3sp"
                    android:text="မှတ်ချက်"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
