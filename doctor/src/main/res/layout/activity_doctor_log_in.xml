<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:conext="activities.DoctorLoginActivity"
    tools:ignore="MissingDefaultResource"
    android:orientation="vertical"
    android:background="@drawable/dr_login_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="17sp"
        android:shadowColor="#297b7b7b"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:textColor="@color/blue"
        android:textSize="34sp"
        android:layout_marginStart="100dp"
        android:textStyle="bold"
        tools:text="The CareMM" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#297b7b7b"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:fontFamily="@font/poppins"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="9sp"
        android:gravity="center_horizontal"
        android:layout_marginStart="157dp"
        tools:text="DOCTOR APP"
        />
    <EditText
        android:id="@+id/etEnterPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:hint="Enter Phone Number"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:paddingStart="15dp"
        android:layout_marginTop="290dp"
        android:textColorHint="@color/text_color_hint"
        android:textSize="14sp"
        android:textStyle="normal"
        android:lineSpacingExtra="7sp"
        android:background="@drawable/rounded_corner_edittext"/>
    <EditText
        android:id="@+id/etEnterPassword"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:hint="Enter Password"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:paddingStart="15dp"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:textColorHint="@color/text_color_hint"
        android:textSize="14sp"
        android:textStyle="normal"
        android:lineSpacingExtra="7sp"
        android:background="@drawable/rounded_corner_edittext"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="54dp"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="@color/blue"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:fontFamily="@font/poppins"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="9sp"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:layout_marginStart="21dp"
            android:layout_weight="1"/>

        <!--                <androidx.appcompat.widget.AppCompatTextView-->
        <!--                    android:id="@+id/tvSignUp"-->
        <!--                    android:layout_width="wrap_content"-->
        <!--                    android:layout_height="wrap_content"-->
        <!--                    android:fontFamily="@font/poppins"-->
        <!--                    android:textStyle="normal"-->
        <!--                    android:textSize="14sp"-->
        <!--                    android:textColor="#032ff2"-->
        <!--                    android:clickable="true"-->
        <!--                    android:lineSpacingExtra="7sp"-->
        <!--                    android:text="Sign Up"-->
        <!--                    android:layout_weight="1"-->
        <!--                    android:layout_marginStart="21dp"-->
        <!--                    android:layout_gravity="start"-->
        <!--                    android:layout_marginEnd="21dp"/>-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvForgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#032ff2"
            android:gravity="end"
            android:layout_weight="1"
            android:lineSpacingExtra="7sp"
            android:text="Forget Password"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:layout_gravity="end" />
    </LinearLayout>

</LinearLayout>

