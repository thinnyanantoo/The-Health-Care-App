<?xml version="1.0" encoding="utf-8"?>
<com.padc.shared.viewpods.RecommendMedicineViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="60dp"
    android:gravity="left"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_margin="12dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#d6e9ff"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine Recommendiation"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/genmental"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="7sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#000000"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/genmental"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="7sp"
                    android:id="@+id/tvMedicineList"
                    android:text="Acetaminophen (Tylenol)"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="9dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/no_path"
            android:layout_marginTop="20dp"
            android:id="@+id/userprofile"/>

    </LinearLayout>
</com.padc.shared.viewpods.RecommendMedicineViewPod>